<resources>


    <!-- ****************************************主题 开始************************************Theme.AppCompat.Light.NoActionBar**-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/main_color</item>
        <item name="colorPrimaryDark">@color/main_color</item>
        <item name="colorAccent">@color/main_color</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:buttonStyle">@null</item>
        <!--设置边框的衰退颜色-->
        <!--<item name="android:requiresFadingEdge">vertical</item>-->
        <item name="android:listSelector">@color/translucent</item>
        <item name="android:textCursorDrawable">@drawable/edittext_cursor_main_color</item>
        <item name="textColorError">@color/design_textinput_error_color_light</item>

    </style>

    <style name="AppTheme.Fullscreen" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.Translucent" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.MainTheme" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/MainAnimation</item>
    </style>

    <style name="AppTheme.OtherTheme" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/OtherAnimation</item>
    </style>


    <style name="AppTheme.Welcome" parent="AppTheme">
        <item name="android:windowBackground">@mipmap/welcome</item>
    </style>


    <style name="AppTheme.PhotoBrowse" parent="AppTheme">
        <item name="android:windowBackground">@color/photo_browse</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>

    <style name="OtherAnimation">

        <item name="android:windowEnterAnimation">@anim/activity_open_enter</item>
        <item name="android:windowExitAnimation">@anim/activity_colse_exit</item>
    </style>

    <style name="MainAnimation">
        <!--<item name="android:activityOpenEnterAnimation">@null</item>-->
        <!--<item name="android:activityOpenExitAnimation">@null</item>-->
        <!--<item name="android:windowEnterAnimation">@anim/activity_open_enter</item>-->
        <!--<item name="android:windowExitAnimation">@anim/activity_colse_exit</item>-->
    </style>

    <style name="PhotoBrowseAnimation">
        <item name="android:activityOpenEnterAnimation">@anim/dialog_anim_scale_enter</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@anim/dialog_anim_scale_exit</item>
    </style>


    <style name="AnimationPreview">
        <item name="android:windowEnterAnimation">@anim/popupwindow_animation_in</item>
        <item name="android:windowExitAnimation">@anim/popupwindow_animation_out</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 无标题 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <!-- dialog的动画 -->
    <style name="main_menu_animstyle">
        <!-- windowEnterAnimation 进入的动画 -->
        <!--  代码里面 -->
        <item name="android:windowEnterAnimation">@anim/photo_dialog_in_anim</item>
        <item name="android:windowExitAnimation">@anim/photo_dialog_out_anim</item>
    </style>
    <!--新增旅客-->
    <style name="activity_add_passenger_linearlayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">@dimen/dp_15</item>
    </style>

    <style name="activity_add_passenger_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">@dimen/text_h</item>
    </style>

    <style name="activity_add_passenger_right">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="activity_add_passenger_edittext" >
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">@dimen/text_h</item>
        <item name="android:minWidth">@dimen/dp_100</item>
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginLeft">@dimen/dp_5</item>
        <item name="android:layout_width">match_parent</item>

        <!--<item name="android:maxWidth">@dimen/dp_200</item>-->

        <item name="android:textColorHint">@color/gray_66</item>
    </style>
    <!--datePicker-->
    <style name="time_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/background</item>
    </style>
</resources>
