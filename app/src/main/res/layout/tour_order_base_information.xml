<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dp_15"
    android:paddingBottom="@dimen/dp_15"
    android:orientation="vertical"
    android:background="@drawable/bg_shape_corner_white"
    tools:showIn="@layout/activity_tour_my_order_detail">

    <TextView
        android:id="@+id/tv_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:text="待支付"
        android:textColor="#FF5757"
        android:textSize="18sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_12"
        android:background="#E1E1E1" />

    <TextView
        android:layout_marginLeft="@dimen/dp_16"
        android:id="@+id/tv_order_sn"
        android:textColor="#333333"
        android:textSize="14sp"
        android:layout_marginTop="@dimen/dp_14"
        android:text="订单编号：106977711"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginLeft="@dimen/dp_16"
        android:id="@+id/tv_create_time"
        android:textColor="#333333"
        android:textSize="14sp"
        android:layout_marginTop="@dimen/dp_10"
        android:text="创建时间：2017-05-06 10:22:00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_15"
        android:background="#E1E1E1" />

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginRight="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@mipmap/ly_next"
            android:id="@+id/iv_to_tour_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginRight="@dimen/dp_40"
            android:id="@+id/tv_order_title"
            android:layout_toLeftOf="@+id/iv_to_tour_detail"
            android:textSize="14sp"
            android:textColor="#333333"
            android:text="【欢乐三亚】海南+三亚双飞5天6晚私家团，全程连住国际五星级酒店"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv01"
            android:text="订单金额："
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_order_price"
            android:textSize="14sp"
            android:textColor="#FF5757"
            android:layout_toRightOf="@id/tv01"
            android:text="￥1980"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_order_price_detail"
            android:layout_toRightOf="@id/tv_order_price"
            android:layout_marginLeft="@dimen/dp_20"
            android:text="费用明细"
            android:textColor="#4AB048"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_outset"
        android:text="出发城市：杭州"
        android:textSize="14sp"
        android:textColor="#333333"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_outset_time"
        android:text="出发时间：2017-08-09"
        android:textSize="14sp"
        android:textColor="#333333"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_return_time"
        android:text="归来时间：2017-08-09"
        android:textSize="14sp"
        android:textColor="#333333"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_passenger_num"
        android:text="出游人数：1成人"
        android:textSize="14sp"
        android:textColor="#333333"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>