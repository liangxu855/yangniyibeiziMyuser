<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_ee"
    android:orientation="vertical">

    <com.honganjk.ynybzbizfood.widget.appbarlayout.SupperToolBar
        android:id="@+id/toolbar"
        style="@style/ToolbarB"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_collapseMode="pin" />

    <ImageView
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_30"
        android:src="@mipmap/ic_subscribe_succeed" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_gravity="center_horizontal"
        android:layout_toRightOf="@+id/picture"
        android:padding="@dimen/dp_5"
        android:text="预约成功"
        android:textColor="@color/black"
        android:textSize="@dimen/text_xxh" />

    <TextView
        android:id="@+id/serviceTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_gravity="center_horizontal"
        android:layout_toRightOf="@+id/picture"
        android:text="预约时间上门时间"
        android:textColor="@color/gray_33"
        android:textSize="@dimen/text_xxxm" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@color/white"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/picture"
            android:layout_width="@dimen/dp_65"
            android:layout_height="@dimen/dp_65"
            android:layout_margin="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_30"
            android:src="@mipmap/logo" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_toRightOf="@+id/picture"
            android:text="服务内容"
            android:textColor="@color/black"
            android:textSize="@dimen/text_h"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_toRightOf="@+id/picture"
            android:text="服务时间"
            android:textColor="@color/gray_66"
            android:textSize="@dimen/text_xxxm" />


    </RelativeLayout>


    <TextView
        android:id="@+id/immediatelySubscribe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_30"
        android:background="@color/main_color"
        android:gravity="center"
        android:padding="@dimen/dp_12"
        android:text="完成"
        android:textColor="@color/white"
        android:textSize="@dimen/text_xxxm" />


</LinearLayout>
