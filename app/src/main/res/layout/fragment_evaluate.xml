<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:background="@color/bg_white">

        <TextView
            android:id="@+id/tv_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_20"
            android:text="@string/tv_grade"
            android:textColor="@color/text_green"
            android:textSize="@dimen/text_xh" />

        <TextView
            android:id="@+id/tv_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_grade"
            android:layout_marginLeft="@dimen/dp_48"
            android:layout_marginTop="@dimen/dp_3"
            android:text="@string/tv_rank"
            android:textSize="@dimen/text_xxxm" />

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_45"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_toRightOf="@+id/tv_grade"
            android:background="@color/bg_divide" />
        <TextView
            android:id="@+id/tv_grade_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_grade_num"
            android:gravity="top"
            android:layout_toRightOf="@+id/tv_grade"
            android:background="@mipmap/iv_grade_bg"
            android:layout_marginTop="@dimen/dp_15"/>
        <View
            android:layout_width="@dimen/dp_210"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_below="@+id/tv_grade_progress"
            android:layout_toRightOf="@+id/tv_grade"
            android:background="@mipmap/iv_grade_porgress" />

    </RelativeLayout>

    <com.honganjk.ynybzbizfood.widget.autoloadding.SuperRecyclerView
        android:id="@+id/switchRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/bg_white" />

</LinearLayout>