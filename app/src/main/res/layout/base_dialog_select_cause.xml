<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_select_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/dp_10">


    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="15dp"
        android:text="选择原因"
        android:textColor="@color/black"
        android:textSize="@dimen/text_h" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="不方便服务"
            android:textColor="@color/gray_66"
            android:textSize="@dimen/text_xxxm" />


        <com.honganjk.ynybzbizfood.widget.AnimCheckBox
            android:id="@+id/select1"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:padding="@dimen/dp_12"
            app:ab_circleColor="@color/main_color"
            app:ab_isSelect="true"
            app:ab_outColor="@color/gray_66"
            app:ab_strokeColor="@color/white" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="不在家"
            android:textColor="@color/gray_66"
            android:textSize="@dimen/text_xxxm" />


        <com.honganjk.ynybzbizfood.widget.AnimCheckBox
            android:id="@+id/select2"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:padding="@dimen/dp_12"
            app:ab_circleColor="@color/main_color"
            app:ab_isSelect="false"
            app:ab_outColor="@color/gray_66"
            app:ab_strokeColor="@color/white" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="重新下单"
            android:textColor="@color/gray_66"
            android:textSize="@dimen/text_xxxm" />


        <com.honganjk.ynybzbizfood.widget.AnimCheckBox
            android:id="@+id/select3"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:padding="@dimen/dp_12"
            app:ab_circleColor="@color/main_color"
            app:ab_isSelect="false"
            app:ab_outColor="@color/gray_66"
            app:ab_strokeColor="@color/white" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="其他原因"
            android:textColor="@color/gray_66"
            android:textSize="@dimen/text_xxxm" />


        <com.honganjk.ynybzbizfood.widget.AnimCheckBox
            android:id="@+id/select4"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:padding="@dimen/dp_12"
            app:ab_circleColor="@color/main_color"
            app:ab_isSelect="false"
            app:ab_outColor="@color/gray_66"
            app:ab_strokeColor="@color/white" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/gray_66"
            android:textSize="@dimen/text_h" />

        <View
            android:layout_width="@dimen/dp_0_5"
            android:layout_height="match_parent"
            android:background="@color/gray" />


        <TextView
            android:id="@+id/commit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/main_color"
            android:textSize="@dimen/text_h" />

    </LinearLayout>


</LinearLayout>