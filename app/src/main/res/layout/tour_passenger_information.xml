<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:showIn="@layout/activity_tour_order_details">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/dp_15">

        <TextView
            android:id="@+id/tv_pn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="出游人数"
            android:textColor="#333333"
            android:textSize="15sp" />

        <com.honganjk.ynybzbizfood.widget.NumberSelectRect
            android:id="@+id/select_man_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_toRightOf="@id/tv_pn">

        </com.honganjk.ynybzbizfood.widget.NumberSelectRect>
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#E1E1E1" />
    <LinearLayout
        android:id="@+id/ll_passenger_info_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include layout="@layout/item_passneger_info"/>

    </LinearLayout>
</merge>