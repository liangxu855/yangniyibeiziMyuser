<?xml version="1.0" encoding="utf-8"?>
<com.honganjk.ynybzbizfood.widget.slips.SWSlipsLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!--显示的内容-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dp_10">


        <com.honganjk.ynybzbizfood.widget.AnimCheckBox
            android:id="@+id/checkBox"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            app:ab_circleColor="@color/main_store"
            app:ab_isSelect="false"
            app:ab_strokeColor="@color/white"
            app:ab_textColor="@color/gray_33" />


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/picture"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_80"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/fail_picture" />


            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_5"
                android:layout_toRightOf="@id/picture"
                android:maxLines="1"
                android:text="名称"
                android:textColor="@color/black"
                android:textSize="@dimen/text_xxm" />

            <TextView
                android:id="@+id/type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_margin="@dimen/dp_5"
                android:layout_toRightOf="@+id/picture"
                android:maxLines="1"
                android:text="类型"
                android:textColor="@color/gray_66"
                android:textSize="@dimen/text_xxm" />

            <TextView
                android:id="@+id/money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_60"
                android:layout_toRightOf="@+id/picture"
                android:text="150"
                android:textColor="@color/red"
                android:textSize="@dimen/text_xxm" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_60"
                android:layout_toRightOf="@+id/money"
                android:text="150"
                android:textColor="@color/gray_66"
                android:textSize="@dimen/text_xxm" />


            <com.honganjk.ynybzbizfood.widget.NumberSelectRect
                android:id="@+id/numberSelectRect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_60">

            </com.honganjk.ynybzbizfood.widget.NumberSelectRect>
        </RelativeLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="@dimen/dp_100"
        android:layout_height="100dp">

        <TextView
            android:id="@+id/delete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/main_red"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/white"
            android:textSize="@dimen/text_h" />
    </LinearLayout>

</com.honganjk.ynybzbizfood.widget.slips.SWSlipsLayout>

