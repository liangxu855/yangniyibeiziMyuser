<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_ee"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/businessLogo"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@mipmap/logo" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/dp_10"
            android:drawableRight="@drawable/material_arrwos_greay_right"
            android:padding="@dimen/dp_10"
            android:text="@string/name"
            android:textColor="@color/gray_66"
            android:textSize="@dimen/text_xxxm" />

        <TextView
            android:id="@+id/orderStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/boundry1"
            android:layout_marginRight="@dimen/dp_20"
            android:gravity="right"
            android:text="护理类型"
            android:textColor="@color/main_red"
            android:textSize="@dimen/text_xxxm" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_1"
        android:background="@color/main_gray2"
        android:padding="@dimen/dp_10">

        <ImageView
            android:id="@+id/picture"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_70"
            android:layout_marginRight="@dimen/dp_10" />

        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/boundry1"
            android:layout_toLeftOf="@+id/presentPrice"
            android:layout_toRightOf="@+id/picture"
            android:text="名称"
            android:textColor="@color/gray_33"
            android:textSize="@dimen/text_xxxm" />


        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/type"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_toRightOf="@+id/picture"
            android:lineSpacingExtra="@dimen/dp_5"
            android:text="@string/date"
            android:textColor="@color/gray_66"
            android:textSize="@dimen/text_xxm" />


        <TextView
            android:id="@+id/presentPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="现价"
            android:textColor="@color/gray_66"
            android:textSize="@dimen/text_xxxm" />

        <TextView
            android:id="@+id/originalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/presentPrice"
            android:layout_marginTop="@dimen/dp_2"
            android:text="原价"
            android:textColor="@color/gray_66"
            android:textSize="@dimen/text_xxxm" />

        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/originalPrice"
            android:layout_marginTop="@dimen/dp_5"
            android:text="原价"
            android:textColor="@color/gray_66"
            android:textSize="@dimen/text_xxm" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/dp_10">


        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:text="@string/price"
            android:textColor="@color/gray_33"
            android:textSize="@dimen/text_xxm" />

        <View
            android:id="@+id/boundary1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_below="@+id/price"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@color/gray_ee" />


        <LinearLayout
            android:id="@+id/buttonParent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/boundary1"
            android:layout_marginTop="@dimen/dp_8"
            android:gravity="right|center_vertical">

            <TextView
                android:id="@+id/cancel"
                android:layout_width="@dimen/dp_70"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/bg_select_true"
                android:gravity="center"
                android:paddingBottom="@dimen/dp_5"
                android:paddingTop="@dimen/dp_5"
                android:text="删除订单"
                android:textColor="@color/gray_66"
                android:textSize="@dimen/text_xxm" />

            <TextView
                android:id="@+id/status"
                android:layout_width="@dimen/dp_70"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/bg_order_select"
                android:gravity="center"
                android:paddingBottom="@dimen/dp_5"
                android:paddingTop="@dimen/dp_5"
                android:text="金额支付"
                android:textColor="@color/main_color"
                android:textSize="@dimen/text_xxm" />


        </LinearLayout>
    </RelativeLayout>
</LinearLayout>