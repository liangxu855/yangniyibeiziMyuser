<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_white">
    <RelativeLayout
        android:id="@+id/rlw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.honganjk.ynybzbizfood.view.tour.DiyView.GradientTextView
            android:id="@+id/hot_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="17dp"
            android:text="@string/hot_activity"
            android:textColor="@color/gray_33"
            android:textSize="@dimen/text_xh"
            android:textStyle="italic" />

        <LinearLayout
            android:id="@+id/rl"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/hot_activity"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="22dp"
            android:weightSum="1">

            <ImageView
                android:id="@+id/picture"
                android:layout_width="91dp"
                android:layout_height="83dp"
                android:scaleType="fitXY" />

            <RelativeLayout
                android:layout_marginLeft="@dimen/dp_7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/name"
                    android:lines="2"
                    android:layout_width="218dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="@string/greensName"
                    android:textColor="@color/gray_33"
                    android:textSize="@dimen/text_h" />
                <LinearLayout
                    android:id="@+id/ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@id/name">
                    <TextView
                        android:textSize="15sp"
                        android:text="¥"
                        android:textColor="@color/red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/price"
                        android:textColor="@color/clr_red"
                        android:textSize="24sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="起"
                        android:textSize="15sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_3"
                    android:text="@string/buy_num"
                    android:layout_below="@id/ll"
                    android:textSize="@dimen/text_xxm" />
            </RelativeLayout>

        </LinearLayout>
        <ImageView
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@mipmap/ly_next" />
    </RelativeLayout>
    <RelativeLayout
        android:background="@color/bg_gray"
        android:layout_below="@id/rlw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.honganjk.ynybzbizfood.view.tour.DiyView.GradientTextView
           android:layout_marginTop="@dimen/dp_21"
            android:layout_marginBottom="@dimen/dp_10"
            android:id="@+id/guess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_gray"
            android:text="@string/cai_ni_xi_huan"
            android:textSize="@dimen/text_xh" />
    </RelativeLayout>

</RelativeLayout>