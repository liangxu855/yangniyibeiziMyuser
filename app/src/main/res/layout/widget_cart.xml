<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@color/bg_divide">

    <LinearLayout
        android:layout_marginTop="@dimen/dp_0_5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="@dimen/dp_5">

    <ImageView
        android:id="@+id/tv_cart_num"
        android:layout_width="50dp"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:layout_height="50dp"
        android:gravity="center"

        android:src="@mipmap/shop_cart" />

    <TextView
        android:id="@+id/tv_cart_price"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="left|center_vertical"
        android:layout_weight="2"
        android:textSize="@dimen/text_xxm"
        android:textColor="@color/red" />

    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@color/clr_divide" />

    <TextView
        android:id="@+id/tv_send_money"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_weight="6"
        android:paddingLeft="@dimen/dp_5"
        android:textSize="@dimen/text_xxxm"
        android:textColor="@color/black_20" />

    <TextView
        android:id="@+id/tv_send_open"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@color/black_20"
        android:textSize="@dimen/text_xxxm"
        android:layout_weight="3" />
    </LinearLayout>
</LinearLayout>