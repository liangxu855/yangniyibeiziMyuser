<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false">
        <shape>
            <solid android:color="@color/gray_f0" />
            <corners android:bottomLeftRadius="@dimen/dp_5" android:topLeftRadius="@dimen/dp_5" />
            <stroke android:width="@dimen/dp_1" android:color="@color/gray_ee" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/white" />
            <corners android:bottomLeftRadius="@dimen/dp_5" android:topLeftRadius="@dimen/dp_5" />
            <stroke android:width="@dimen/dp_1" android:color="@color/main_color" />
        </shape>
    </item>

</selector>